{
  "ConnectionStrings": {
    "DefaultConnection": "{ConnectionStrings__DefaultConnection}"
  },
  "MeilisearchClient": {
    "Host": "{MeilisearchClient__Host}",
    "ApiKey": "{MeilisearchClient__ApiKey}"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "TestApi"
    }
  },
  "Otlp":{
    "ServiceName":"opl_grafana_meilisearch_API",
    "Endpoint":"http://otel-collector:4317"
  },
  "Infisical": {
    "SiteUrl": "http://localhost:8080",
    "Environment": "development",
    "ProjectId":"b0839732-279f-4f2a-9de2-5e88df668672"
  }
}
